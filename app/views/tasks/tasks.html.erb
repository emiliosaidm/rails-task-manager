<div class="container d-flex flex-column">
  <h1>My tasks</h1>
  <div class="container d-flex flex-column">
    <% @tasks.each do |task| %>
     <label class="form-check-label">
      <input class="form-check-input" type="checkbox" <%= "checked" if task.completed%> value="" id="flexCheckDefault" disabled>
      <%= link_to task.title, task_path(task)  %>
      </label>
    <%end%>
  </div>
  <%= link_to "+ Add new", new_path %>
</div>
